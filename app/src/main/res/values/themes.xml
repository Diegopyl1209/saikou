<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Base" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/status</item>

        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="colorOnPrimary">@color/bg_white</item>
        <item name="colorSecondary">@color/violet_400</item>
        <item name="colorSecondaryVariant">@color/violet_700</item>
        <item name="colorOnSecondary">@color/bg_black</item>
        <item name="colorSecondaryContainer">?attr/colorSecondary</item>
        <item name="colorOnSecondaryContainer">?attr/colorOnSecondary</item>
        <item name="colorOnSurfaceVariant">@color/nav_tab</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/bg_black</item>

        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearanceOverlay.Demo</item>
        <item name="android:ambientShadowAlpha">0.08</item>
        <item name="android:spotShadowAlpha">0.08</item>
        <item name="snackbarStyle">@style/MySnackbar</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">450</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/anim_splash</item>
    </style>

    <style name="Theme.Saikou" parent="Theme.Base">
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Saikou.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Saikou.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Saikou.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Saikou.Exoplayer" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>
</resources>